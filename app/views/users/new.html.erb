<div class="form-body">

<h3>New Employee Sign-Up</h3>

<%= form_for @user do |f| %>

  <span class="form"><%= f.label :username %></span>
  <%= f.text_field :username, class: 'text-box' %>

  <br>
  <br>

  <span class="form"><%= f.label :password %></span>
  <%= f.password_field :password, class: 'text-box' %>

  <br>
  <br>

  <%= f.submit class: "button" %>


<% end %>

</div>
